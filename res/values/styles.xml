<resources>
    <style name="CustomTheme" parent="android:Theme">
         <item name="android:windowNoTitle">true</item>
         <item name="android:textColor">#FF333333</item>
         <item name="android:textSize">16sp</item>
    </style>
    <style name="AppTitleContainer">
    	<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">44dp</item>
	    <item name="android:gravity">center_vertical|center_horizontal</item>
    </style>
    <style name="AppTitle">
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:textSize">18sp</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	</style>
	<style name="UserInputArea">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingLeft">1dp</item>
		<item name="android:paddingRight">1dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:stretchColumns">0</item>
	</style>
	<style name="InputTempHumid">
		<item name="android:layout_width">67dp</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:singleLine">true</item>
	    <item name="android:textSize">22sp</item>
	</style>
	<style name="ActionBtnsArea">
      	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
	  	<!--<item name="android:paddingBottom">5dp</item>-->
	</style>
    <style name="ActionBtn">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">3dp</item>
	    <item name="android:textSize">16dp</item>
	    <item name="android:shadowColor">#333333</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">1</item>
	    <item name="android:layout_weight">1</item>
	</style>
	<style name="ShowResultsArea">
		<item name="android:orientation">vertical</item>
      	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
	  	<item name="android:paddingBottom">10dp</item>
	  	<item name="android:layout_marginTop">10dp</item>
	</style>
	<style name="Results">
		<item name="android:orientation">vertical</item>
      	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
      	<!-- <item name="android:layout_weight">1</item>-->
	</style>
	<style name="ActionContainer">
      	<item name="android:orientation">horizontal</item>
      	<item name="android:layout_width">fill_parent</item>
      	<item name="android:layout_height">wrap_content</item>
      	<item name="android:paddingBottom">10dp</item>
      	<item name="android:gravity">center</item>
	</style>
	<style name="BottomMenuContainer">
		<item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>	    
	</style>
	<style name="BottomMenuBtn">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:gravity">center</item>
	    <item name="android:layout_margin">4dp</item>
	    <item name="android:textSize">13dp</item>
	    <item name="android:layout_gravity">center</item>
	</style>
	<style name="TextLink">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:textColor">#FF0066cc</item>
	    <item name="android:layout_marginRight">5dp</item>
	    <item name="android:textSize">14dp</item>
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="TipBox">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">14sp</item>
		<item name="android:gravity">left</item>
		<item name="android:textColor">#000000</item> 
		<item name="android:layout_marginTop">5dp</item>
		<item name="android:padding">5dp</item>
	</style>
	<style name="MainMenus">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_marginBottom">15dp</item>
		<item name="android:textSize">16dp</item>
		<item name="android:textColor">#FFFFFFFF</item>
	    <item name="android:shadowColor">#333333</item>
	    <item name="android:shadowDx">1</item>
	    <item name="android:shadowDy">1</item>
	    <item name="android:shadowRadius">2</item>
	</style>		
	<style name="InfoBtn">
	    <item name="android:layout_width">fill_parent</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:layout_weight">1</item>
	    <item name="android:gravity">left</item>
	    <item name="android:layout_gravity">left</item>
	    <item name="android:textColor">#0000FF</item><!-- #3979d6 -->
	    <!-- <item name="android:textStyle">bold</item> -->
	    <item name="android:background">#FFFFFF</item>
	</style>
	<style name="hrBlack">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">0.5dip</item>
	    <item name="android:background">#000000</item>
	    <item name="android:layout_marginTop">5dip</item>
	    <item name="android:layout_marginBottom">10dip</item>
	</style>
		<style name="hrGrey">
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">0.5dip</item>
	    <item name="android:background">#CCCCCC</item>
	    <item name="android:layout_marginTop">10dip</item>
	    <item name="android:layout_marginBottom">10dip</item>
	</style>
	<style name="Precautions_btn">
	    <item name="android:background">@drawable/calc_btn</item>
	    <item name="android:layout_width">wrap_content</item>
	    <item name="android:layout_height">wrap_content</item>
	    <item name="android:padding">5dp</item>
	    <item name="android:textColor">#FFFFFF</item>
	    <item name="android:gravity">center</item>
	    <item name="android:textSize">18dp</item>
	</style>
	
	<style name="TitleBox">
	<item name="android:layout_width">fill_parent</item>
	<item name="android:layout_height">wrap_content</item>	
	<item name="android:textSize">20sp</item>
	<item name="android:layout_marginTop">5dp</item>
	<item name="android:background">#3979d6</item>
	<item name="android:textColor">#FFFFFF</item>
	<item name="android:gravity">center</item>
	</style>
</resources>